{
  "$schema": "https://json.schemastore.org/package",
  "name": "verifnow",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicoandmee/verifnow.git"
  },
  "license": "MIT",
  "author": "Nico Kokonas <nicomee@riseup.net> (https://nicomee.com/)",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "run-s clean",
    "build:tsup": "tsup",
    "circular": "dpdm --ext ts --circular --output .rush/circular.json src",
    "clean": "rimraf dist",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src --ext .ts --fix",
    "lint:sort": "sort-package-json",
    "typecheck": "tsc --noEmit",
    "upgrade": "ncu -u --packageFile package.json",
    "docs": "typedoc"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "got": "^11.8.2",
    "json-rpc-2.0": "^1.4.2",
    "tslog": "^4.7.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@nodesuite/eslint-config": "^0.3.28",
    "@rollup/plugin-json": "^6.0.0",
    "@rushstack/eslint-config": "^3.1.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^18.11.18",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/parser": "^5.50.0",
    "copyfiles": "^2.4.1",
    "dpdm": "^3.12.0",
    "esbuild-register": "^3.4.2",
    "eslint": "8.22.0",
    "npm-check-updates": "^15.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "prettier-eslint-cli": "^7.1.0",
    "replace-in-files": "^3.0.0",
    "replace-in-files-cli": "^2.0.0",
    "rimraf": "^4.1.2",
    "sort-package-json": "^2.4.0",
    "tslib": "^2.5.0",
    "tsup": "^6.5.0",
    "typedoc": "^0.23.24",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=16"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "splitting": false,
    "sourcemap": "inline",
    "clean": true,
    "dts": true,
    "treeshake": true,
    "format": [
      "cjs",
      "esm"
    ],
    "target": "node16",
    "minify": true,
    "platform": "node"
  }
}
